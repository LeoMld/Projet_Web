<%- include('../../components/header_entreprise') %>
<div class="container">
    <%if(typeof flash !== 'undefined'){
    %>
        <div class="alert <%= flash.type %> fade-out" role="alert"><%= flash.mess%> </div>
    <%
    } %>
    <h1 class="mt-5 text-center">Influenceurs ayant postulé pour votre projet</h1>
        <hr style="width: 50%;">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <%
        if(typeof infos[0] != 'undefined' ){
        for (let i = 0; i < infos.length; i++){

        %>

            <tr  id="ad<%= i%>">
                <th scope="row"><%= i %></th>
                <td><%= infos[i].nom_I%></td>
                <td><%= infos[i].prenom_I%></td>

                <td>
                    <a class="btn btn-light btn-sm mr-2" href="/entreprise/inf/<%= infos[i].id_Influenceur%>">Visualiser le profil</a>
                </td>
        <%
        }

        }else{
        %>
                <div class="text-center">
                    <small>Personne n'a encore postulé pour votre annonce</small>
                </div>

                <%
                }
        %>
            </tr>
        </tbody>
    </table>
</div>
<%- include('../../components/footer') %>