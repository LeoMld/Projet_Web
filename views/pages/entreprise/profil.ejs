                            <hr class="mt-n2" style="width: 40%;">
                            <h6>Mail : </h6><p><%= infos[0].mail_E%></p>
                            <h6 class="mt-3 mb-3">numéro de téléphone: </h6>
                            <p><%= infos[0].tel_E%></p>
                        </div>
                    </div>

                    <hr style="width: 30%;">
                    <h4>Description de l'entreprise</h4>
                    <p><%= infos[0].desc_E%></p>

                </div>
            </div>

        </div>

</div>
