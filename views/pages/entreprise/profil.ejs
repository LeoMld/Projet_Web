<%- include('../../components/header_entreprise') %>
<div class="container mt-5 mb-5">

    <%if(typeof flash !== 'undefined'){
    %>
        <div class="alert <%= flash.type %> fade-out" role="alert"><%= flash.mess%> </div>
    <%
    } %>
        <h1 class="mt-5 text-center">Mon profil entreprise</h1>
        <hr style="width: 50%;">
        <div class="jumbotron shadow jumbotron-fluid">
            <div class="container pl-5 pr-5">
                <div>
                    <div class="text-center">
                        <a class="btn btn-primary" href="/entreprise/profil/modify">Modifier ces informations</a>
                        <a class="btn btn-light" href="/entreprise/profil/modify_pwd">Changer de mot de passe</a>

                    </div>


                    <div class="row mt-5">
                        <div class="col-md-8 text-center ">
                            <div class="row">
                                <h4 class="mr-3">Nom de l'entreprise: </h4>
                                <h5 class="mt-1"><%= infos[0].nom_E%></h5>
                            </div>
                            <div class="row mt-5 ">
                                <h4 class="mt-3 mr-3">Site Web:</h4>
                                <a style="text-decoration: none;" href="http://<%= infos[0].site_web%>"><img alt="logo représentant un site web" class="footer_logos mr-3 mb-4" id="logo" src="/assets/images/site_web.png"  height="60" ></a>
                            </div>


                        </div>

                        <div class="col-md-4 shadow-sm" style="background-color: rgba(252,252,228,0.84)">
