<%- include('../../components/header') %>

<script src="/assets/javascripts/register.js"></script>
<div class="container mt-5 pb-5">
    <%
        if(typeof flash != 'undefined'){
        %>
            <div class="alert <%= flash.type %> fade-out" role="alert"><%= flash.mess%> </div>
        <%
        }else{
        }
    %>


    <h1 class="text-center">Créer un compte</h1>


        <div class="mb-5">
            <label for="type"><small>Veuillez d'abord choisir votre statut</small></label>
            <select id="type" name="type" class="form-control" autofocus>
                <option value='0'>-</option>
                <option value='1'>Influenceur</option>
                <option value='2'>Entreprise</option>
            </select>
        </div>
        <div id="inf" style="display: none">
            <form action="/register" method="post">
            <div id="inf">
            <div class="form-row">
                <div class="col form-group">
                    <label for="name_I">Prénom</label>
                    <input type="text" class="form-control" name="name_I" id="name_I" maxlength="60" required >
                </div>
                <div class="col form-group">
                    <label for="surname_I">Nom</label>
                    <input type="text" class="form-control" name="surname_I" id="surname_I" maxlength="60" required >
                </div>

            </div>
            <div class="form-group">
                <label for="date_I">Date de naissance</label>
                <input type="date" class="form-control" name="date_I" id="date_I" required >
            </div>
            <div class="form-group">
                <label for="nameInf">Nom Influenceur</label>
                <input type="text" class="form-control" name="nameInf" id="nameInf" maxlength="60" required >
            </div>
            <label for="type">Public visé</label>
            <select id="public_" name="public_" class="form-control" autofocus>
                <option value='6'><%= public[5].type_P%></option>
                <option value='1'><%= public[0].type_P %></option>
                <option value='2'><%= public[1].type_P %></option>
                <option value='3'><%= public[2].type_P %></option>
                <option value='4'><%= public[3].type_P %></option>
                <option value='5'><%= public[4].type_P %></option>
            </select>
            <div class="form-group">
                <label for="mail_I">Email</label>
                <input type="email" class="form-control" name="mail_I" id="mail_I" maxlength="100" required >
                <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre mail.</small>
            </div>
            <div class="form-group">
                <label for="pwd_I">Mot de passe</label>
                <input type="password" class="form-control" name="pwd_I" id="pwd_I" maxlength="100" required>
            </div>
                <button type="submit" name="envoiI" id="envoiI" class="btn btn-primary">S'inscrire</button>
            </div>
        </form>

    </div>
    <div id="ent" style="display: none">
        <form action="/register" method="post">
            <div class="form-row">
                <div class="col form-group">
                    <label for="name_E">Nom Entreprise</label>
                    <input type="text" class="form-control" name="name_E" id="name_E" maxlength="60" required >
                </div>
            </div>
            <div class="form-group">
                <label for="mail_E">Email</label>
                <input type="email" class="form-control" name="mail_E" id="mail_E" maxlength="100" required >

            </div>
            <div class="form-group">
                <label for="pwd_E">Password</label>
                <input type="password" class="form-control" name="pwd_E" id="pwd_E" maxlength="100" required>
            </div>

            <button type="submit" name="envoiE" id="envoiE" class="btn btn-primary">S'inscrire</button>
        </form>
    </div>
</div>

<%- include('../../components/footer') %>